{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "arrow-return-shorthand": [
      false,
      "multiline"
    ],
    "no-console": [
      false,
      "log",
      "error"
    ],
    "interface-name": [
      false,
      "always-prefix"
    ],
    "interface-name": [
      false,
      "never-prefix"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
